#include "../isr.h"
#include "../../../kio.h"
#include <stdint.h>

__attribute__((interrupt))
void ExeptionHandler(InterrupFrame* frame) {
	kprintf("\nExeption i.e go implement the isr you lazy fuck.\n Here's info:\n\
	IP: 0x%x\n\
	CS: 0x%x\n\
	rflags: %x\n\
	reg sp: 0x%x\n\
	Stack seg: 0x%x\n\
	And now its gonna halt. Bye and good luck!", 
frame->IP, frame->CS, frame->rflags, frame->registerStackPointer, frame->stackSegment);
	__asm__ volatile ("cli; hlt"); // Completely hangs the computer
	__builtin_unreachable();
}
